# ============================================================
# BTC Prediction Bot — Environment Variables
# ============================================================
# Copy this file to .env and fill in your real values.
# NEVER commit .env to version control.
# Updated: 2026-03-01
# ============================================================

# === EXCHANGE (Kraken Futures) ===
# API credentials for Kraken Futures (PF_XBTUSD)
# Generate at: https://futures.kraken.com/trade/settings/api
KRAKEN_API_KEY=your_kraken_futures_api_key
KRAKEN_API_SECRET=your_kraken_futures_api_secret

# === DATABASE (Supabase) ===
# Project URL from Supabase dashboard → Settings → API
SUPABASE_URL=https://your-project-ref.supabase.co
# Service role key — used for internal reads/writes (keep secret)
SUPABASE_KEY=your_supabase_service_role_key
# Anon key — used for /rescue-orphaned endpoint
SUPABASE_ANON_KEY=your_supabase_anon_key
# Table name (default: btc_predictions). Use sandbox_btc_predictions for paper trading.
SUPABASE_TABLE=btc_predictions

# === AUTH ===
# API key for authenticated trading endpoints (/place-bet, /close-position, etc.)
BOT_API_KEY=your_strong_random_key
# Read-only key for dashboard data endpoints (/signals, /account-summary, etc.)
READ_API_KEY=your_read_only_key
# Token for /cockpit dashboard access (X-Cockpit-Token header)
COCKPIT_TOKEN=your_cockpit_token

# === TRADING CONFIG ===
# Set to true/1/yes to block real Kraken orders (paper trading mode)
DRY_RUN=false
# Confidence threshold — signals below this are skipped (default: 0.56)
CONF_THRESHOLD=0.56
# Max price drift allowed between signal and execution (default: 0.5%)
SLIPPAGE_MAX_PCT=0.005
# Set to true to block all DOWN bets (long-only mode)
DISABLE_DOWN_BETS=false
# Base position size in BTC (default: 0.002)
BASE_SIZE=0.002
# Capital in USD for PnL % calculations
CAPITAL_USD=100
# Max bet duration in hours before forced close (default: 4)
MAX_BET_DURATION_HOURS=4
# Minimum clean bets required to activate XGBoost gate (default: 100)
XGB_MIN_BETS=100

# === ON-CHAIN (Polygon PoS) ===
# Private key for the audit wallet (commits prediction hashes)
POLYGON_PRIVATE_KEY=your_polygon_wallet_private_key
# Deployed BTCBotAudit.sol contract address
POLYGON_CONTRACT_ADDRESS=0xe4661F7dB62644951Eb1F9Fd23DB90e647833a55
# Polygon RPC endpoint (default: public node)
POLYGON_RPC_URL=https://polygon-bor-rpc.publicnode.com

# === TELEGRAM ===
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Channel ID for public signal posts (numeric, with -)
TELEGRAM_CHANNEL_ID=-1003762450968
# Owner chat ID for admin notifications
TELEGRAM_OWNER_ID=your_telegram_user_id

# === n8n (Self-hosted VPS) ===
# API key for n8n instance
N8N_API_KEY=your_n8n_api_key
# n8n base URL (self-hosted on Hostinger VPS)
N8N_URL=https://n8n.your-vps-domain.com
# Workflow ID for wf02 (close position) — used by rescue endpoint
WF02_ID=NnjfpzgdIyleMVBO

# === SECURITY ===
# Google reCAPTCHA v3 secret key (form protection)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret
# Cloudflare Turnstile secret key (alternative CAPTCHA)
TURNSTILE_SECRET_KEY=your_turnstile_secret
# Google Site Verification tag (for Search Console)
GOOGLE_SITE_VERIFICATION=your_verification_code

# === MONITORING ===
# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === COST TRACKING ===
# Your Railway plan: free | hobby | pro
RAILWAY_PLAN=hobby
# Hostinger VPS monthly cost in EUR
HOSTINGER_VPS_MONTHLY_EUR=4.99
# Domain yearly cost in EUR
DOMAIN_YEARLY_EUR=78.07
# Hostinger email yearly cost in EUR
HOSTINGER_EMAIL_YEARLY_EUR=6.59
# Monthly Claude Code spend in USD (manual, from Anthropic invoice)
CLAUDE_CODE_MONTHLY_USD=30
# Polygon gas monthly estimate in USD
POLYGON_GAS_MONTHLY_USD=0.0
