# ============================================================
# BTC Prediction Bot — Environment Variables
# ============================================================
# Copy this file to .env and fill in your real values.
# NEVER commit .env to version control.
# ============================================================

# === EXCHANGE (Kraken Futures) ===
# API credentials for Kraken Futures (PF_XBTUSD)
# Generate at: https://futures.kraken.com/trade/settings/api
KRAKEN_API_KEY=your_kraken_futures_api_key
KRAKEN_API_SECRET=your_kraken_futures_api_secret

# === DATABASE (Supabase) ===
# Project URL from Supabase dashboard → Settings → API
SUPABASE_URL=https://your-project-ref.supabase.co
# Service role key — used for internal reads/writes (keep secret)
SUPABASE_KEY=your_supabase_service_role_key
# Anon key — used for /rescue-orphaned endpoint
SUPABASE_ANON_KEY=your_supabase_anon_key

# === AI (Anthropic / Claude) ===
# Your Anthropic API key — https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-...
# Claude model to use for predictions
CLAUDE_MODEL=claude-sonnet-4-6

# === n8n (Cloud) ===
# API key for the /n8n-status proxy endpoint
# Generate at: https://your-instance.app.n8n.cloud/settings/api
N8N_API_KEY=your_n8n_api_key
# Max executions limit on your n8n plan (Starter = 2500)
N8N_EXECUTION_LIMIT=2500

# === BOT BEHAVIOUR ===
# Set to true/1/yes to block real Kraken orders (paper trading mode)
DRY_RUN=false
# Supabase table to use (default: btc_predictions). Set to sandbox_btc_predictions for paper trading.
SUPABASE_TABLE=btc_predictions

# === COST TRACKING ===
# Your Railway plan for static cost calculation: free | hobby | pro
RAILWAY_PLAN=hobby
# Your monthly Claude Code spend in USD (used in /costs endpoint)
CLAUDE_CODE_MONTHLY_USD=30
